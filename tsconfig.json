{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "downlevelIteration": true,
    "strict": true,
    "lib": ["dom", "ESNext"],
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}